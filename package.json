{
  "name": "then-chrome",
  "version": "1.0.0",
  "description": "Promise wrapper for chrome api",
  "main": "out/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha --recursive --compilers js:babel/register --require ./test/setup.js",
    "code": "eslint ./src ./test && jscs ./src ./test",
    "build": "npm run code && npm run test && npm run babel",
    "babel": "npm run clean && babel ./src --out-dir ./out",
    "clean": "rm -rf ./out/",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:acvetkov/then-chrome.git"
  },
  "keywords": [
    "chrome",
    "api",
    "js",
    "promise",
    "async"
  ],
  "author": "Aleksey Tsvetkov <aleksey.dmitrich@gmail.com> (https://github.com/acvetkov)",
  "license": "ISC",
  "devDependencies": {
    "babel": "^5.8.29",
    "babel-eslint": "^4.1.3",
    "bluebird": "^3.0.5",
    "chai": "^3.4.0",
    "chai-as-promised": "^5.1.0",
    "eslint": "^1.7.3",
    "eslint-config-airbnb": "^0.1.0",
    "eslint-plugin-react": "^3.6.3",
    "install": "^0.2.2",
    "jscs": "^2.2.1",
    "lodash": "^3.10.1",
    "mocha": "^2.3.3",
    "q": "^1.4.1",
    "sinon": "^1.17.2",
    "sinon-chrome": "^1.0.2"
  }
}
